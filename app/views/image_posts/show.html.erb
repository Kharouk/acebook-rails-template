<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm">

      <div>
        <%= image_tag(@image_post.picture_url, width: 600) if @image_post.picture.present? %> <br>
        <%= @image_post.caption %> <br>
        <p> Posted by <%= find_image_post_email(@image_post) %> <%= time_ago_in_words(@image_post.created_at || Time.now) %> ago. </p>

        <%= link_to 'Edit', edit_image_post_path(@image_post) %> |
        <%= link_to 'Back', image_posts_path %>
        <hr>
      </div>

    </div>

    <div class="col-sm">
      <%= render 'image_comments/index' %>
    </div>
  </div>
</div>
